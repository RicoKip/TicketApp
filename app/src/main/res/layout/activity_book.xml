<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/eventDate3"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/eventLocation2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgaeCalendar2"
        app:layout_constraintTop_toBottomOf="@+id/eventName3" />

    <ImageView
        android:id="@+id/eventImgaeView2"
        android:layout_width="389dp"
        android:layout_height="234dp"
        android:layout_marginBottom="13dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/eventName3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="ice_cream_sandwich" />

    <EditText
        android:id="@+id/eventName3"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/eventDate3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventImgaeView2" />

    <ImageView
        android:id="@+id/imgaeCalendar2"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/imageLocation2"
        app:layout_constraintEnd_toStartOf="@+id/eventDate3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventName3"
        app:srcCompat="@drawable/ic_events"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageLocation2"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="94dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="94dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/eventLocation2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgaeCalendar2"
        app:srcCompat="@drawable/ic_location"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/eventLocation2"
        android:layout_width="185dp"
        android:layout_height="53dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageLocation2"
        app:layout_constraintTop_toBottomOf="@+id/eventDate3" />

    <Button
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="213dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="213dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10dp"
        android:text="@string/add_to_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventLocation2" />

</android.support.constraint.ConstraintLayout>