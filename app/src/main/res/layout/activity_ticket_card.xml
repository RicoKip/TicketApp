<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/ticket_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/card_header"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"/>
            <RelativeLayout
                android:id="@+id/image_view"
                android:layout_below="@+id/card_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/Qr_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ticket_image"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:contentDescription="@string/todo" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ticketDtl"
                    android:layout_toRightOf="@+id/Qr_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/Qr_image">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/user"
                        android:layout_below="@+id/name"
                        android:textSize="18sp"
                        android:layout_width="200dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/price"
                        android:layout_below="@+id/user"
                        android:layout_width="200dp"
                        android:layout_height="50dp" />
                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/card_footer"
                android:layout_below="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPrimary" />

        </RelativeLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>